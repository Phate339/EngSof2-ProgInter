@model Trabalho.Models.Answer

@{
    ViewData["Title"] = "Delete";
}

<div class="alert alert-info">
    <h1 class="block-title text-left-lg">Eliminar Questionário</h1>
</div>

<h3>Tem certeza de que deseja eliminar isto?</h3>
<div>
    <div class="alert alert-warning">
        <dl class="dl-horizontal">
            <input type="hidden" asp-for="AnswerID" />
            <p></p>
            <p>
            <dt>
                @Html.DisplayNameFor(model => model.Survey)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Survey.Question)
            </dd>
            </p>
            <p>
            <dt>
                @Html.DisplayNameFor(model => model.AnswerToClient)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.AnswerToClient)
            </dd>
            </p>
        </dl>
        </div>
        <form asp-action="Eliminar">
            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-lg btn-danger" /> |
                <a asp-action="Index" class="btn btn-lg btn-primary">Voltar à lista</</a>
            </div>
        </form>
