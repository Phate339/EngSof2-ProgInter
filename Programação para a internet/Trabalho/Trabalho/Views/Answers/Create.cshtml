@model Trabalho.Models.Answer

@{
    ViewData["Title"] = "Create";
}
<div class="alert alert-info">
    <h1 class="block-title text-left-lg">Criar Questionário</h1>
</div>

<form asp-action="Create">
    <div class="form-horizontal">
 
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

      
        <div class="alert alert-warning">
            @for (int i = 0; i < 3; i++)
            {
                <div class="form-group">

                    <label asp-for="Survey" class="col-md-2 control-label"></label>
                    <div class="col-md-7">

                        <select asp-for="SurveyID" class="form-control" asp-items="ViewBag.SurveyID"></select>
                    </div>

                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">Answer</label>
                    <div class="col-lg-7">
                        <div class="col-md-push-7">
                            <input asp-for="AnswerToClient" class="form-control" />
                            <span asp-validation-for="AnswerToClient" class="text-danger"></span>

                        </div>
                    </div>
                </div>
            }


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Criar" class="btn btn-lg btn-default" />
                </div>
            </div>
        </div>        
</form>

<div>
    <a asp-action="Index" class="btn btn-lg btn-primary">Voltar à lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
