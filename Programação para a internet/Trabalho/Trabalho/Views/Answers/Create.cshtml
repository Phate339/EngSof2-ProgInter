@model Trabalho.Models.Answer

@{
    ViewData["Title"] = "Create";
}

<h2 style="color:chocolate; font-size:40px">Criar Resposta</h2>
<p>
    <a asp-controller="Answers" asp-action="Index" class="btn btn-more">Lista de Respostas Possiveis</a> 
</p>
<hr />
<form asp-action="Create" style="font-size:20px">
    <div class="form-horizontal">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
            <label asp-for="QuestionsID" class="col-md-2 control-label" style="color:chocolate">Pergunta</label>
            <div class="col-md-10">
                <select asp-for="QuestionsID" class="form-control" asp-items="ViewBag.QuestionsID">
                    <option value="">-- Selecione a Pergunta --</option>

                </select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="PossibleAnswer" class="col-md-2 control-label" style="color:chocolate">Resposta</label>
            <div class="col-md-10">
                <input asp-for="PossibleAnswer" class="form-control" />
                <span asp-validation-for="PossibleAnswer" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="DifficultyID" class="col-md-2 control-label" style="color:chocolate">Dificuldade</label>
            <div class="col-md-10">
                
                <select asp-for="DifficultyID" class="form-control" asp-items="ViewBag.DifficultyID">
                    <option value="">-- Selecione a Dificuldade --</option>

                </select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Criar" class="btn btn-more" style="font-size:20px" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-controller="Questions" asp-action="Index" class="btn btn-more">
        <i class="fa fa-arrow-left">
        </i>Voltar
    </a>

</div>
<div id="fillbackground">
</div>
