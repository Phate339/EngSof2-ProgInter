@model Trabalho.Models.Answer

@{
    ViewData["Title"] = "Edit";
}

<h2 style="color:chocolate;">Editar Resposta</h2>

<hr />
<form asp-action="Edit">
    <div class="form-horizontal">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="AnswerID" />
        <div class="form-group">
            <label asp-for="QuestionsID" class="control-label col-md-2" style="color:chocolate;">Pergunta</label>
            <div class="col-md-10">
                <select asp-for="QuestionsID" class="form-control" asp-items="ViewBag.QuestionsID"></select>
                <span asp-validation-for="QuestionsID" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="PossibleAnswer" class="col-md-2 control-label" style="color:chocolate;">Resposta</label>
            <div class="col-md-10">
                <input asp-for="PossibleAnswer" class="form-control" />
                <span asp-validation-for="PossibleAnswer" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="DifficultyID" class="control-label col-md-2" style="color:chocolate;">Dificuldade</label>
            <div class="col-md-10">
                <select asp-for="DifficultyID" class="form-control" asp-items="ViewBag.DifficultyID"></select>
                <span asp-validation-for="DifficultyID" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-more" style="font-size:20px" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index" class="btn btn-more">
        <i class="fa fa-arrow-left">
        </i>Voltar
    </a>

</div>

<div id="fillbackground">
</div>
