@model Trabalho.Models.Answer

@{
    ViewData["Title"] = "Edit";
}

<h2>Editar Resposta</h2>

<hr />
<form asp-action="Edit">
    <div class="form-horizontal">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="AnswerID" />
        <div class="form-group">
            <label asp-for="PossibleAnswer" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="PossibleAnswer" class="form-control" />
                <span asp-validation-for="PossibleAnswer" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="QuestionsID" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <select asp-for="Questions.QuestionsToClient" class="form-control" asp-items="ViewBag.QuestionsID"></select>
                <span asp-validation-for="Questions.QuestionsToClient" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="DifficultyID" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <select asp-for="DifficultyID" class="form-control" asp-items="ViewBag.DifficultyID"></select>
                <span asp-validation-for="DifficultyID" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

