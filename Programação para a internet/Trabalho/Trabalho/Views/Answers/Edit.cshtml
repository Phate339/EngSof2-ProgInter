@model Trabalho.Models.Answer

@{
    ViewData["Title"] = "Edit";
}

<div class="alert alert-info">
    <h1 class="block-title text-left-lg">Editar Questionário</h1>
</div>
<form asp-action="Edit">
    <div class="form-horizontal">
     
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="alert alert-warning">
         <input type="hidden" asp-for="AnswerID" />

        <div class="form-group">
            <label  class="control-label col-md-2">Survey</label>
            <div class="col-md-10">
                <select asp-for="SurveyID" class="form-control" asp-items="ViewBag.SurveyID"></select>
                <span asp-validation-for="Survey.Question" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label  class="col-md-2 control-label">Answer</label>
            <div class="col-md-10">
                <input asp-for="AnswerToClient" class="form-control" />
                <span asp-validation-for="AnswerToClient" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-success" />
            </div>
        </div>
        </div>
       
    </div>
</form>

<div>
    <a asp-action="Index" class="btn btn-lg btn-primary">Voltar à lista</</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
