@model IEnumerable<Trabalho.Models.Answer>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.PossibleAnswer)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.Difficulty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Questions)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PossibleAnswer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Difficulty.DifficultyID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Questions.QuestionsID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AnswerID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.AnswerID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.AnswerID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
