@model Trabalho.Models.Questions

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Questions</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="QuestionsID" />
        <div class="form-group">
            <label asp-for="QuestionsToClient" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="QuestionsToClient" class="form-control" />
                <span asp-validation-for="QuestionsToClient" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    <input asp-for="QuestionsState" />
                    <label asp-for="QuestionsState"></label>
                </div>
            </div>
        </div>
        <div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <table>
            <tr>
                @{
                    int cnt = 0;
                    List<Trabalho.Models.ViewModels.CreateQuestionType_AnswerViewModel> answer = ViewBag.Answer;
                    if (answer != null) { 
                    foreach (var answers in answer)
                    {

                        if (cnt++ % 5 == 0)
                        {
                            @:</tr><tr>
                        }
                        @:<td>
                            <input type="checkbox"
                                   name="selectedAnswer"
                                   value="@answers.AnswerID"
                                   @(Html.Raw(answers.Assigned ? "checked=\"checked\"" : "")) />
                                   @answers.AnswerID @:  @answers.PossibleAnswer
                        @:</td>
                    }
                    }
                    @:</tr>

                }
        </table>
    </div>
</div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

