@model Trabalho.Models.Questions

@{
    ViewData["Title"] = "Edit";
}

<h2 style="color:chocolate">Editar Inquerito</h2>
<hr />
<form asp-action="Edit">
    <div class="form-horizontal">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="QuestionsID" />
        <div class="form-group">
            <label asp-for="QuestionsToClient" class="col-md-2 control-label" style="color:chocolate;">Pergunta</label>
            <div class="col-md-10">
                <input asp-for="QuestionsToClient" class="form-control" />
                <span asp-validation-for="QuestionsToClient" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="QuestionsState" class="col-md-2 control-label"style="color:chocolate;">Estado da Pergunta</label>
            <div class="col-md-10">
                    <input asp-for="QuestionsState" class="checkbox" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-more" style="font-size:20px" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index" class="btn btn-more" >
        <i class="fa fa-arrow-left">
        </i>Voltar
    </a>
 
</div>

<div id="fillbackground">
</div>
