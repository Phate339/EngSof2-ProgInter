@model Trabalho.Models.Question

@{
    ViewData["Title"] = "EditDis";
}

<h2>EditDis</h2>

<form asp-action="EditDis">
    <div class="form-horizontal">
        <h4>Question</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="QuestionID" />
        <div class="form-group">
            <label asp-for="QuestionToClient" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="QuestionToClient" class="form-control" />
                <span asp-validation-for="QuestionToClient" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="QuestionState" class="col-md-2 control-label"></label>
            <div class="col-md-1">
                <input asp-for="QuestionState" class="form-control" />
                <span asp-validation-for="QuestionState" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-offset-2 col-md-10">
        <table>
            <tr>
                @{
                    int cnt = 0;
                    List<Trabalho.Models.ViewModels.CreateQuestionDiseasesViewModel> diseases = ViewBag.Diseases;

                    foreach (var course in diseases)
                    {
                        if (cnt++ % 3 == 0)
                        {
                            @:</tr><tr>
                        }
                        @:<td>
                            <input type="checkbox"
                                   name="selectedDiseases"
                                   value="@course.DiseasesID"
                                   @(Html.Raw(course.Assigned ? "checked=\"checked\"" : "")) />
                                   @course.DiseasesID @:  @course.DiseasesName
                        @:</td>
                    }
                    @:</tr>
                }
        </table>
    </div>
</div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
