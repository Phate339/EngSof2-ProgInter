<!--model IEnumerable<Trabalho.Models.Parameters>-->
@model ParametersViewModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    Resposta Permitida
                </th>
            <th>
                Nivel de Dificuldade
            </th>
            <th>
               Pergunta
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Parameters) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AllowedAnswer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Difficulty.DifficultyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Questions.QuestionsToClient)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ParametersID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ParametersID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ParametersID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
