@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Log in";
}

<h2 style="color:chocolate;">@ViewData["Title"]</h2>


<div class="row" style="font-size:20px">
    <div class="col-md-8">
        <section>
            <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
                <h4 style="color:chocolate;">Entre já no seu site favorito</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email" class="col-md-2 control-label" style="color:chocolate;"> Nome de Utilizador</label>
                    <div class="col-md-10">
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="col-md-2 control-label" style="color:chocolate;"></label>
                    <div class="col-md-10">
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <div class="checkbox" >
                            <label asp-for="RememberMe" style="color:chocolate;">
                                <input asp-for="RememberMe" />
                                Lembrar-me?
                            </label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-more" style="font-size:20px">Log in</button>
                        <div class="pull-right">
                            <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" class="btn btn-more">Registe-se aqui</a>
                        </div>
                    </div>
                    
                </div>
             
            </form>
        </section>
    </div>

</div>


<div id="fillbackground">
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
