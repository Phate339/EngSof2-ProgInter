@model PaginatedList<Trabalho.Models.TuristAnswer>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                   Pergunta
                </th>
            <th>
                Resposta 1
            </th>
            <th>
                Resposta 2
            </th>
            <th>
                Resposta 3
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Answer.Questions.QuestionsToClient)
        </td>
    </tr>
           @foreach (var item2 in item.Answer.Questions.Answer)
           {
               <td></td>
            <td>

                @Html.DisplayFor(modelItem => item2.PossibleAnswer)
            </td>
           }

}
    </tbody>
</table>

@{ 
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}
<a asp-action ="Index"
            asp-route-sortOrder ="@ViewData["CurrentSort"]"
            asp-route-page="@(Model.PageIndex - 1)"
            asp-route-currentFilter="@ViewData["CurrentFilter"]"
            class="btn btn-default @prevDisabled">
            Previous
</a>
<a asp-action="Index"
   asp-route-sortOrder="@ViewData["CurrentSort"]"
   asp-route-page="@(Model.PageIndex + 1)"
   asp-route-currentFilter="@ViewData["CurrentFilter"]"
   class="btn btn-default @nextDisabled">
    Next
</a>

