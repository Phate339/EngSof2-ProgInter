@model IEnumerable<Trabalho.Models.Diseases>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.DiseasesName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Care)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DiseasesName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Care)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DiseasesID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DiseasesID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DiseasesID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <button type="button" onclick="location.href='@Url.Action("Index","Questions")'">Voltar</button>
    </div>
</div>
